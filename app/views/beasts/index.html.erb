  </tr>

<% @beasts.each do |beast| %>
  <tr>
    <td><%= beast.name %></td>
    <td><%= link_to 'Show', beast %></td>
    <td><%= link_to 'Edit', edit_beast_path(beast) %></td>
    <td><%= link_to 'Destroy', beast, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

